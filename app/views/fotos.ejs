<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div class="container my-5">
    <h1 class="text-center mb-4"><%= title %></h1>

    <!-- Formulario de búsqueda -->
    <div class="row mb-4">
      <div class="col-md-6 offset-md-3">
        <form action="/findById/json" method="get" class="d-flex">
          <input type="text" name="id" class="form-control" placeholder="Buscar por ID" required>
          <button type="submit" class="btn btn-primary ms-2">Buscar</button>
        </form>
      </div>
    </div>

    <!-- Tabla de fotos -->
    <table class="table table-hover table-bordered align-middle text-center">
      <thead class="table-primary">
        <tr>
          <th>ID</th>
          <th>Título</th>
          <th>Descripción</th>
          <th>Calificación</th>
          <th>Imagen</th>
          <th>Etiquetas</th>
        </tr>
      </thead>
      <tbody>
        <!-- Aquí es donde se colocan los datos de las fotos -->
        <% arrFotos.forEach(foto => { %>
          <tr>
            <td><%= foto.id %></td>
            <td><%= foto.titulo %></td>
            <td><%= foto.descripcion %></td>
            <td><%= foto.calificacion %></td>
            <td>
              <img src="/<%= foto.ruta %>" alt="<%= foto.titulo %>" class="img-thumbnail" style="max-width: 150px;">
            </td>
            <td>
              <% if (foto.Etiqueta && foto.Etiqueta.length > 0) { %>
                <% foto.Etiqueta.forEach(etiqueta => { %>
                  <span class="badge bg-info text-dark me-1"><%= etiqueta.texto %></span>
                <% }) %>
              <% } else { %>
                <span class="text-muted">Sin etiquetas</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
